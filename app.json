{
  "expo": {
    "name": "Trackr",
    "slug": "trackr-health",
    "version": "1.6.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "trackr",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.trackr.health",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Trackr needs camera access to scan food photos for AI nutrition analysis and to scan handwritten journal entries.",
        "NSPhotoLibraryUsageDescription": "Trackr needs photo library access to select food photos for AI nutrition analysis and journal images.",
        "NSMicrophoneUsageDescription": "Trackr may use the microphone for future voice journaling features.",
        "CFBundleAllowMixedLocalizations": true
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.trackr.health",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-camera",
        {
          "cameraPermission": "Trackr needs camera access to scan food photos and journal entries."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Trackr needs photo library access to select images for food analysis."
        }
      ],
      [
        "expo-notifications",
        {
          "sounds": []
        }
      ],
      "@react-native-community/datetimepicker"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    },
    "owner": "your-username"
  }
}
